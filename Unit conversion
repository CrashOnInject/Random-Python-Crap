print("distance converter")

# Distance Converter
print("\n--- Distance Converter ---")
Unit = int(input("Enter the number of kilometers you want to convert: "))
if Unit < 0:
    print("Invalid input")
else:
    print("1. convert to miles")
    print("2. convert to meters")
    print("3. convert to yards")
    print("4. convert to feet")
    print("5. convert to inches")
    choice = int(input("Enter your choice: "))
    if choice == 1:
        print(f"{Unit} kilometers = {Unit * 0.621371} miles")
    elif choice == 2:
        print(f"{Unit} kilometers = {Unit * 1000} meters")
    elif choice == 3:
        print(f"{Unit} kilometers = {Unit * 1094.61} yards")
    elif choice == 4:
        print(f"{Unit} kilometers = {Unit * 3280.84} feet")
    elif choice == 5:
        print(f"{Unit} kilometers = {Unit * 39370.1} inches")
    else:
        print("Invalid choice")
    print("Thank you for using this converter!")

# Distance Converter for Miles
print("\n--- Miles Converter ---")
Unit = int(input("Enter the number of miles you want to convert: "))
if Unit < 0:
    print("Invalid input")
else:
    print("1. Convert to kilometers")
    print("2. Convert to meters")
    print("3. Convert to yards")
    print("4. Convert to feet")
    print("5. Convert to inches")
    choice = int(input("Enter your choice: "))
    if choice == 1:
        print(f"{Unit} miles = {Unit * 1.60934} kilometers")
    elif choice == 2:
        print(f"{Unit} miles = {Unit * 1609.34} meters")
    elif choice == 3:
        print(f"{Unit} miles = {Unit * 1760} yards")
    elif choice == 4:
        print(f"{Unit} miles = {Unit * 5280} feet")
    elif choice == 5:
        print(f"{Unit} miles = {Unit * 63360} inches")
    else:
        print("Invalid choice")
    print("Thank you for using this converter!")

