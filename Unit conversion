print("Volume Converter")

# LITERS
print("\n--- Liters Converter ---")
Unit = int(input("Enter the number of liters you want to convert: "))
if Unit < 0:
    print("Invalid input")
else:
    print("1. Convert to fl. oz")
    print("2. Convert to cups")
    print("3. Convert to pints")
    print("4. Convert to quarts")
    print("5. Convert to gallons")
    choice = int(input("Enter your choice: "))
    if choice == 1:
        print(f"{Unit} liters = {Unit * 33.814} fl. oz")
    elif choice == 2:
        print(f"{Unit} liters = {Unit * 4.22675} cups")
    elif choice == 3:
        print(f"{Unit} liters = {Unit * 2.11338} pints")
    elif choice == 4:
        print(f"{Unit} liters = {Unit * 1.05669} quarts")
    elif choice == 5:
        print(f"{Unit} liters = {Unit * 0.264172} gallons")
    else:
        print("Invalid choice")
    print("Thank you for using this converter!")

